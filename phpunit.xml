<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="vendor/autoload.php" backupGlobals="false"
         backupStaticAttributes="false" colors="true" convertErrorsToExceptions="true" convertNoticesToExceptions="true"
         convertWarningsToExceptions="true" processIsolation="false" stopOnFailure="false"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">api/src</directory>
        </include>
        <exclude>
            <directory>api/src/Application/services.php</directory>
        </exclude>
    </coverage>
    <testsuites>
        <testsuite name="api-tests">
            <directory>api/tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
