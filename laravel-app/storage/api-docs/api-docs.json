                    "Investments"
                ],
                "summary": "Create an investment",
                "operationId": "650ba82fccad5f7634cd8f4e7580abbc",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "investment_date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "invested_amount": {
                                        "type": "string"
                                    },
                                    "owner_id": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "investment_date": "2022-01-02",
                                    "invested_amount": "2200.15",
                                    "owner_id": "98c6afc6-bfdb-4ef8-ab80-daa7dc8aa440"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "OK"
                    }
                }
            }
        },
